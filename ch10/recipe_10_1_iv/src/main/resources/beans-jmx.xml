<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xmlns:context="http://www.springframework.org/schema/context"
			 xmlns="http://www.springframework.org/schema/beans"
			 xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:component-scan base-package="com.apress.springrecipes.replicator.config"/>

	<bean id="mbeanExporter"
				class="org.springframework.jmx.export.MBeanExporter">
		<property name="beans">
			<map>
				<entry key="bean:name=documentReplicator"
							 value-ref="documentReplicator"/>
			</map>
		</property>
		<property name="assembler" ref="assembler"/>
	</bean>

	<bean id="assembler" class="org.springframework.jmx.export.assembler.MethodNameBasedMBeanInfoAssembler">
		<property name="managedMethods">
			<list>
				<value>getSrcDir</value>
				<value>setSrcDir</value>
				<value>getDestDir</value>
				<value>setDestDir</value>
				<value>replicate</value>
			</list>
		</property>
	</bean>


</beans> 
